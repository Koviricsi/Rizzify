<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:sys="clr-namespace:System;assembly=mscorlib">  

    <SolidColorBrush x:Key="header_bg_color" Color="#222222"/>  
    <SolidColorBrush x:Key="header_bt_color" Color="#333333"/>  
    <SolidColorBrush x:Key="header_bt_color_hover" Color="#9D00FF"/>  
    <SolidColorBrush x:Key="header_bt_border_color" Color="#444444"/>  
    <SolidColorBrush x:Key="header_bt_icon_color" Color="#666666"/>  
    <SolidColorBrush x:Key="header_bt_icon_color_hover" Color="#FFFFFFFF"/>
    <sys:Double x:Key="header_bt_size">30</sys:Double>
    <sys:Double x:Key="header_bt_icon_size">20</sys:Double>
    <Thickness x:Key="header_bt_margin_size">7</Thickness>

    <Style TargetType="Rectangle" x:Key="header_bg">  

       <Setter Property="Fill" Value="{StaticResource header_bg_color}"/>  

   </Style>  

   <Style TargetType="Button" x:Key="close_bt">  

       <Setter Property="Width" Value="{StaticResource header_bt_size}"/>
        <Setter Property="Height" Value="{StaticResource header_bt_size}"/>
        <Setter Property="Margin" Value="{StaticResource header_bt_margin_size}"/>  
       <Setter Property="Background" Value="{StaticResource header_bt_color}" />  
       <Setter Property="BorderBrush" Value="{StaticResource header_bt_border_color}" />  

       <Setter Property="Template">  
           <Setter.Value>  

               <ControlTemplate TargetType="Button">  

                   <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">  

                       <Viewbox Stretch="Uniform">

                            <Canvas Width="{StaticResource header_bt_icon_size}" Height="{StaticResource header_bt_icon_size}">  
                               <Line x:Name="close_bt_line1" X1="3" Y1="3" X2="17" Y2="17" Stroke="{StaticResource header_bt_icon_color}" StrokeThickness="2"/>  
                               <Line x:Name="close_bt_line2" X1="17" Y1="3" X2="3" Y2="17" Stroke="{StaticResource header_bt_icon_color}" StrokeThickness="2"/>  
                           </Canvas>  

                       </Viewbox>  

                   </Border>  

                   <ControlTemplate.Triggers>  

                       <Trigger Property="IsMouseOver" Value="True">  
                           <Setter TargetName="close_bt_line1" Property="Stroke" Value="{StaticResource header_bt_icon_color_hover}"/>  
                           <Setter TargetName="close_bt_line2" Property="Stroke" Value="{StaticResource header_bt_icon_color_hover}"/>  
                           <Setter Property="Background" Value="{StaticResource header_bt_color_hover}"/>  
                       </Trigger>  

                   </ControlTemplate.Triggers>  

               </ControlTemplate>  

           </Setter.Value>  
       </Setter>  

   </Style>  

   <Style TargetType="Button" x:Key="minmax_bt">  

       <Setter Property="Width" Value="{StaticResource header_bt_size}"/>  
       <Setter Property="Height" Value="{StaticResource header_bt_size}"/>  
       <Setter Property="Margin" Value="{StaticResource header_bt_margin_size}"/>  
       <Setter Property="Background" Value="{StaticResource header_bt_color}" />  
       <Setter Property="BorderBrush" Value="{StaticResource header_bt_border_color}" />  

       <Setter Property="Template">  
           <Setter.Value>  

               <ControlTemplate TargetType="Button">  

                   <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">  

                       <Viewbox Stretch="Uniform">  

                           <Canvas Width="{StaticResource header_bt_icon_size}" Height="{StaticResource header_bt_icon_size}">  
                               <Rectangle x:Name="minmax_bt_rect" Width="15" Height="10" Canvas.Left="2.5" Canvas.Top="5" Stroke="{StaticResource header_bt_icon_color}" />  
                           </Canvas>  

                       </Viewbox>  

                   </Border>  

                   <ControlTemplate.Triggers>  

                       <Trigger Property="IsMouseOver" Value="True">  
                           <Setter TargetName="minmax_bt_rect" Property="Stroke" Value="{StaticResource header_bt_icon_color_hover}"/>  
                           <Setter Property="Background" Value="{StaticResource header_bt_color_hover}"/>  
                       </Trigger>  

                   </ControlTemplate.Triggers>  

               </ControlTemplate>  

           </Setter.Value>  
       </Setter>  

   </Style>  
</ResourceDictionary>